generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  role         Role     @default(EDITOR)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Role {
  ADMIN
  EDITOR
}

model Event {
  id               String   @id @default(cuid())
  title            String
  slug             String   @unique
  shortDescription String
  content          String
  coverImageUrl    String?
  galleryUrls      Json?
  date             DateTime
  location         String?
  isPublished      Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

enum Category {
  ARCHITECTURE
  NATURE
  STUDIO
}

model Location {
  id           String   @id @default(cuid())
  name         String
  latitude     Float
  longitude    Float
  slug         String   @unique
  address      String?
  description  String?
  galleryUrls  Json?
  isPartner    Boolean  @default(true)
  category     Category @default(ARCHITECTURE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model PriceItem {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Page {
  id          String   @id @default(cuid())
  slug        String   @unique // about, anti-corruption, prosecutor
  title       String
  content     String
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Document {
  id          String   @id @default(cuid())
  title       String
  fileUrl     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteContent {
  id                String   @id @default(cuid())
  slug              String   @unique @default("main") // singleton config
  heroText          String
  feature1Number    String
  feature1Label     String
  feature2Number    String
  feature2Label     String
  feature3Number    String
  feature3Label     String
  footerDescription String
  footerContacts    String
  contactPhone      String   @default("+7 (999) 123-45-67") // новый
  contactEmail      String   @default("info@kino.ru")       // новый (назначение письма)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model TeamMember {
  id          String   @id @default(cuid())
  name        String
  position    String
  experience  String
  photo       String
  description String   @db.Text
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("team_members")
}
